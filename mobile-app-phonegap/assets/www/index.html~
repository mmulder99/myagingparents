    <script>
      function postNotification() {
        if (chkPostNotification.checked) {
          new Notification("Device Information", {
            body : "uuid: " + blackberry.identity.uuid + " IMEI: " + blackberry.identity.IMEI
          });
        }
      }
    </script>
