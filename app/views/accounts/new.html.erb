  </style>
  <script src="js/scripts.js"></script>
  
</head>
<body>
  <table bgcolor="#333333"  border="0" style="width:100%; height:10%" cellpadding=0px>
    <tr>
      <td width=20%></td>
      <td width="222px"> 
      <img src="images/logo.png" width="222px" height="69px"/>
      </td>
      <td valign="bottom" align="right" style="padding-bottom:5px">
        Email Address:
        <input type="email" spellcheck="false" name="email" id="email" value="Email">
        <input type="submit" spellcheck="false" name="submit" value="Get Updates">
      </td>
      <td width=20%></td>
    </tr>
  </table>    

  <table style="width:100%" border=0>
  <tr height=40px>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  <tr>
    <td width="20%"></td>
    <td><img src="images/ladies.jpg" style="width:346px; height:224px"/>


    </td>
    <td>
      <div align="center">
     <h2>Receive SMS Updates From Your Mom</h2>

    <%= form_for(@account) do |f| %>
    Phone Number: 
        <%= f.text_field :phone %>
        <%= f.submit "Try It Now!", :name => "submit" %>
      
    <% end %>
  </div>
  </td>
    <td width="20%"></td>
  </tr>

 <tr height="40px">
    <td colspan="4"></td>
  </tr>

  <tr>
    <td></td>
    <td colspan="2" bgcolor="#333333"></td>
    <td></td>
  </tr>
  <table>


  <div class="main">
    <div class="main-left">
      
    </div>
    <div class="main-right">
